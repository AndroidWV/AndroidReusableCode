<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:radius">@dimen/dp_4</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
    </style>

    <style name="TextInputDropTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:radius">@dimen/dp_4</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
    </style>

    <style name="TextEditTextTheme" >
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="MaterialButtonOutLinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius" > @dimen/dp_24</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/purple_500</item>
    </style>

    <style name="MaterialCardButtonTheme" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/dp_16</item>
        <item name="useCompatPadding">true</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
    </style>

</resources>